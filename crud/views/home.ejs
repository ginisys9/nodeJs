<%- include("partials/header.ejs") %>
    <!-- content -->
    <main class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
                <div class="card-header card-title">
                  <div class="d-flex align-items-center">
                    <h2 class="mb-0">All Contacts</h2>
                    <div class="ml-auto">
                      <a href="/add-contact" class="btn btn-success"><i class="fa fa-plus-circle"></i> Add New</a>
                    </div>
                  </div>
                </div>
              <div class="card-body">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Phone</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%  var serialNumber = counter %>
                    <% myContact.forEach(element => { %> 
                      <tr>
                        <td><%= serialNumber++ %></td>
                        <td><%= element.first_name %></td>
                        <td><%= element.last_name %></td>
                        <td><%= element.email %></td>
                        <td><%= element.phone %></td>
                        <td width="150">
                          <a href="/show-contact/<%= element._id %>" class="btn btn-sm btn-circle btn-outline-info" title="Show"><i class="fa fa-eye"></i></a>
                          <a href="/update-contact/<%= element._id %>" class="btn btn-sm btn-circle btn-outline-secondary" title="Edit"><i class="fa fa-edit"></i></a>
                          <a href="/delete-contact/<%= element._id %>" class="btn btn-sm btn-circle btn-outline-danger" title="Delete" onclick="confirm('Are you sure?')"><i class="fa fa-times"></i></a>
                        </td>
                      </tr>
                   <% }); %>
                  </tbody>
                </table> 
                <nav>
                  <ul class="pagination justify-content-center">
                    
                     <% let hasClass = hasPrevPage ? " ": "disabled" %>
                    <li class="page-item <%= hasClass %>">
                      <a class="page-link" href="/?page=<%= prevPage %>">Previous</a>
                    </li>
                    <% for(var i=1;i<=totalPages;i++) {
                     let activeClass = currentPage == i ? "active": " "  
                    %>
                      <li class="page-item <%= activeClass%> "><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
                      <% } %>
                      <% var hasClass2 = hasNextPage ? " " :"disabled" %>
                    <li class="page-item <%= hasClass2 %>">
                      <a class="page-link" href="/?page=<%=nextPage %>">Next</a>
                    </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
<%- include("partials/footer.ejs") %>